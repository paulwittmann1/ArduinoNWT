#include <SoftwareSerial.h>
//Ultraschallsensor
int trigger=12; 
int echo=11;
long dauer=0; 
long entfernung=0;

// Gleichstrommotor 1
int GSM1 = 10;
int in1 = 9;
int in2 = 8;

void setup()
{
  Serial.begin (9600);
  pinMode(trigger, OUTPUT);
  pinMode(echo, INPUT);
  pinMode(GSM1, OUTPUT);
  pinMode(in1, OUTPUT);
  pinMode(in2, OUTPUT);
}

// void motorStop(){
//  digitalWrite(in1, LOW);
//  digitalWrite(in2, LOW);
//  delay(500);
// }
void loop(){
  digitalWrite(trigger, LOW); 
  delay(5);
  digitalWrite(trigger, HIGH); //Ultraschallwelle lossenden
  delay(10);
  digitalWrite(trigger, LOW);
  dauer = pulseIn(echo, HIGH);
  entfernung = (dauer/2) * 0.03432;

if  (entfernung < 20) //Wenn Entfernung unter 20cm liegt 
{
  Serial.println("20cm erreicht, Gefahr erkannt, bitte wenden");
//  motorStop();
//  delay(200);
  //Rückwärtsfahren
  digitalWrite(in1, LOW);
  digitalWrite(in2, HIGH);
  analogWrite(GSM1, 200); 
  delay(200);
}
  
else {
  Serial.println("Sicherheitsabstand erreicht"); 
//  motorStop();
//  delay(200);
  //Vorwärtsfahren
  digitalWrite(in1, HIGH);
  digitalWrite(in2, LOW);
  analogWrite(GSM1, 200);
  delay(200);
}
delay(1000);
}
